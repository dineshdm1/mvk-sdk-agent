# ========================================
# API Keys (REQUIRED)
# ========================================

# OpenAI API Configuration
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# Tavily Web Search API
# Get your key at: https://app.tavily.com
TAVILY_API_KEY=tvly-your-key-here

# ========================================
# MVK SDK Configuration (REQUIRED)
# ========================================

# MVK API Key (from MVK Dashboard)
MVK_API_KEY=your-mvk-api-key-here

# MVK Agent ID (registered in MVK Dashboard)
MVK_AGENT_ID=mavvrik-sdk-assistant

# MVK Tenant ID (your organization identifier)
MVK_TENANT_ID=mavvrik-internal

# ========================================
# LLM Configuration (OPTIONAL)
# ========================================

# OpenAI Model to use
LLM_MODEL=gpt-4o-mini

# ========================================
# ChromaDB Vector Database (OPTIONAL)
# ========================================

# ChromaDB collection name
CHROMA_COLLECTION=mvk_sdk_docs

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./chroma/data

# ========================================
# Chainlit UI Configuration (OPTIONAL)
# ========================================

# Port for Chainlit web interface
CHAINLIT_PORT=8000

# Authentication password (common for all users)
AUTH_PASSWORD=mavvrik@123
